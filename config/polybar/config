[bar/mini]
modules-center =  weatherz paddingline date paddingline cpufreq paddingline cpu paddingline cputemp paddingline memory
modules-left =  menu-apps pulseaudio paddingline title
modules-right = 
bottom = true
background = #F39A27
#background = ${colors.trans}
foreground = #000
tray-background = ${root.background}
cursor-click = pointer
cursor-scroll = ns-resize
#tray-background = ${colors.grey-9}
tray-position = right
tray-maxsize = 16
tray-padding = 3
tray-detached = false
override-redirect = true
module-margin = 1
font-0 = unifont:fontformat=truetype:size=8:antialias=false;0
font-1 = Noto Sans Symbols2:pixelsize=8;1
fixed-center = true

[module/paddingline]
type = custom/text
content = |

[module/cpu]
type = internal/cpu
label = CPU: %percentage%%
interval = 10

[module/date]
type = internal/date
time = %H:%M:%S
label = %time% 

[module/weatherz]
type = custom/script
exec = "curl -s wttr.in/oulu?format=3"
interval = 720

[module/cputemp]
type = custom/script
exec = "temp=$(sensors | grep -oP 'Core 0.*?\+\K[0-9.]+') && echo $temp¬∞C"
interval = 10

[module/cpufreq]
type = custom/script
exec = freq=$(grep 'cpu MHz' /proc/cpuinfo | head -1 | awk -F: '{print $2/1024}' | rev | cut -c 3- | rev) && echo $freq GHz
interval = 7


[module/memory]
type = internal/memory
format = RAM: <label>
interval = 5

[module/title]
type = internal/xwindow

