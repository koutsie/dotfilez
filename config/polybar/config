[bar/mini]

modules-center = weatherz paddingline date paddingline cpu paddingline memory
modules-left = title
bottom = true
background = #F39A27
#background = ${colors.trans}
foreground = #000
tray-background = ${root.background}
cursor-click = pointer
cursor-scroll = ns-resize
#tray-background = ${colors.grey-9}
tray-position = right
tray-maxsize = 16
module-margin = 1
font-0 = unifont:fontformat=truetype:size=9:antialias=false;0
fixed-center = true


[module/paddingline]
type = custom/text
content = |

[module/cpu]
type = internal/cpu
label = CPU: %percentage%%
interval = 5

[module/date]
type = internal/date
time = %H:%M:%S
label = %time% 

[module/weatherz]
type = custom/script
exec = "curl -s wttr.in/oulu?format=3"
interval = 720'

[module/memory]
type = internal/memory
format = RAM: <label>
interval = 5

[module/title]
type = internal/xwindow
